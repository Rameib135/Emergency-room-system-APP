<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header for Medical Analytics -->
    <TextView
        android:id="@+id/textViewAnalyticsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Analytics"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:paddingBottom="24dp" />

    <!-- Critical Patients Section -->
    <LinearLayout
        android:id="@+id/layoutCritical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_below="@id/textViewAnalyticsTitle"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewCriticalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Critical Patients: 0"
            android:textSize="18sp"
            android:textColor="#FF0000" />
    </LinearLayout>

    <!-- Stable Patients Section -->
    <LinearLayout
        android:id="@+id/layoutStable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_below="@id/layoutCritical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewStableCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stable Patients: 0"
            android:textSize="18sp"
            android:textColor="#00FF00" />
    </LinearLayout>

    <!-- Under Observation Patients Section -->
    <LinearLayout
        android:id="@+id/layoutObservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_below="@id/layoutStable"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewObservationCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under Observation Patients: 0"
            android:textSize="18sp"
            android:textColor="#0000FF" />
    </LinearLayout>

</RelativeLayout>
